
<h1>Choose your stops</h1>

<div>
  <ul>
    <% @stops.each do |stop| %>
      <li>
        <%= stop.name %>
        <%= simple_form_for([@guide, stop, @itinerary], remote: true) do |f| %>
          <%= hidden_field_tag "guide_id", @guide.id %>
          <%= hidden_field_tag "stop_id", stop.id %>
          <%= f.submit "Add" %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>



<table class="table" id="stops">



</table>

<%= link_to(guide_path_path(@guide)) do %>
  <div class=".btn-large"> See the itinerary</div>
<%  end%>
